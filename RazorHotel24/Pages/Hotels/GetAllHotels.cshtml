@page
@model RazorHotel24.Pages.Hotels.GetAllHotelsModel
@{
    ViewData["Title"] = "GetAllHotels";
}

<a asp-page="CreateHotel" class="btn btn-secondary">Tilføj nyt hotel</a>
<br />
<h4 style="color:aquamarine"> List of hotels</h4>
<form>
    search: <input type="text" asp-for="@Model.FilterCriteria" />
    <input type="submit" value="Filter" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Hotel No
            </th>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Hotels.Count() != 0)
        {
            @foreach (var item in Model.Hotels)
            {
                <tr>
                    <td>
                        @item.HotelNr
                    </td>
                    <td>
                        @item.Navn
                    </td>
                    <td>
                        @item.Adresse
                    </td>
                    <td>
                        <p>
                            <a asp-page="/Hotels/DeleteHotel" asp-route-hotelnr="@item.HotelNr">Delete</a>|
                            <a asp-page="/Hotels/EditHotel" asp-route-hotelnr="@item.HotelNr">Edit</a>|
                            <a asp-page="/Rooms/CreateRoom" asp-route-hotelnr="@item.HotelNr">Create new room</a>|
                            <a asp-page="/Rooms/GetAllRooms" asp-route-hotelNo="@item.HotelNr">Rooms</a>|
                        </p>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
