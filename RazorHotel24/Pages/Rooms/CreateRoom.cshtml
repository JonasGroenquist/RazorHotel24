@page
@model RazorHotel24.Pages.Rooms.CreateRoomModel
@{
    ViewData["Title"] = "CreateRoom";
}

<h1>Opret værelse</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="@Model.HotelNr" />
            <div class="form-group">
                <label asp-for="@Model.Room.RoomNr" class="control-label"></label>
                <input asp-for="@Model.Room.RoomNr" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Room.Types" class="control-label"></label>
                <input asp-for="@Model.Room.Types" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Room.Pris" class="control-label"></label>
                <input asp-for="@Model.Room.Pris" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="CreateRoom" class"btn btn-primary" />
            </div>
        </form>
    </div>
</div>
